{% extends 'base.html.twig' %}

{% block title %}Jobs
{% endblock %}

{% block body %}
	<section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2 class="white-text">Job Offers</h2>
				</div>
			</div>
		</div>
	</section>

	<table class="table">

		<thead>
			<tr>
				{# <th>Id</th> #}
				<th>Reference</th>
				<th>Poste</th>
				<th>Description</th>
				{# <th>Active</th>#}
				{# <th>Notes</th> #}
				<th>Location</th>
				<th>Starting date</th>
				<th>ClosingDate</th>
				<th>Salary</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for job in jobs %}
				{% if job.active == 'true"' %}
					<tr>
						{# <td>{{ job.id }}</td> #}
						<td>{{ job.reference }}</td>
						<td>{{ job.jobCategory}}</td>
						<td>{{ job.description }}</td>
						{# <td>{{ job.active ? 'Yes' : 'No' }}</td>
																																																						<td>{{ job.notes }}</td> #}
						<td>{{ job.location }}</td>
						<td>{{ job.closingDate ? job.closingDate|date('Y-m-d') : '' }}</td>
						<td>{{ job.dateCreation ? job.startingDate|date('Y-m-d') : '' }}</td>
						<td>{{ job.salary }}â‚¬ annual</td>


						<td>
							<a href="{{ path('app_job_show', {'id': job.id}) }}">show</a>

						</td>
					</tr>
					{% else %}
				{% endif %}

			{% endfor %}
		</tbody>
	</tbody>
</table>{% endblock %}
