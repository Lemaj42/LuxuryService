{% extends 'base.html.twig' %}

{% block title %}Candidate index{% endblock %}

{% block body %}
    <h1>Candidate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gender</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Adress</th>
                <th>Country</th>
                <th>Nationality</th>
                <th>Passport</th>
                <th>PassportFile</th>
                <th>CurriculumVitae</th>
                <th>ProfilPicture</th>
                <th>CurrentLocation</th>
                <th>DateOfBirth</th>
                <th>PlaceOfBirth</th>
                <th>EmailAdress</th>
                <th>ConfirmEmail</th>
                <th>Password</th>
                <th>ConfirmPassword</th>
                <th>Availability</th>
                <th>JobCategory</th>
                <th>Experience</th>
                <th>ShortDescription</th>
                <th>Notes</th>
                <th>DateCreated</th>
                <th>DateUpdated</th>
                <th>DateDeleted</th>
                <th>Files</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidate in candidates %}
            <tr>
                <td>{{ candidate.id }}</td>
                <td>{{ candidate.Gender ? 'Yes' : 'No' }}</td>
                <td>{{ candidate.FirstName }}</td>
                <td>{{ candidate.LastName }}</td>
                <td>{{ candidate.Adress }}</td>
                <td>{{ candidate.Country }}</td>
                <td>{{ candidate.Nationality }}</td>
                <td>{{ candidate.Passport ? 'Yes' : 'No' }}</td>
                <td>{{ candidate.PassportFile }}</td>
                <td>{{ candidate.CurriculumVitae }}</td>
                <td>{{ candidate.ProfilPicture }}</td>
                <td>{{ candidate.CurrentLocation }}</td>
                <td>{{ candidate.DateOfBirth ? candidate.DateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ candidate.PlaceOfBirth }}</td>
                <td>{{ candidate.EmailAdress }}</td>
                <td>{{ candidate.ConfirmEmail }}</td>
                <td>{{ candidate.Password }}</td>
                <td>{{ candidate.ConfirmPassword }}</td>
                <td>{{ candidate.Availability ? 'Yes' : 'No' }}</td>
                <td>{{ candidate.JobCategory }}</td>
                <td>{{ candidate.Experience }}</td>
                <td>{{ candidate.ShortDescription }}</td>
                <td>{{ candidate.Notes }}</td>
                <td>{{ candidate.DateCreated ? candidate.DateCreated|date('Y-m-d') : '' }}</td>
                <td>{{ candidate.DateUpdated ? candidate.DateUpdated|date('Y-m-d') : '' }}</td>
                <td>{{ candidate.DateDeleted ? candidate.DateDeleted|date('Y-m-d') : '' }}</td>
                <td>{{ candidate.Files }}</td>
                <td>
                    <a href="{{ path('app_candidate_show', {'id': candidate.id}) }}">show</a>
                    <a href="{{ path('app_candidate_edit', {'id': candidate.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="28">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_candidate_new') }}">Create new</a>
{% endblock %}
